
<h2>Create a new vacancy:</h2>
<h4>Post a role here</h4>
<%= simple_form_for(@vacancy) do |v| %>
  <%= v.error_notification %>
  <%= v.error_notification message: v.object.errors[:base].to_sentence if v.object.errors[:base].present? %>
  <%= v.input :title %>
  <%= v.input :school %>
  <%= v.input :salary %>
  <%= v.input :description %>
  <%= v.button :submit %>
<% end %>

<p><%= link_to "Back to vacancies listing", root_path %></p>
